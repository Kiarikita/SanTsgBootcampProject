
@model IEnumerable<HotelSearch.Web.Models.Response.ProductInfoResponse.Hotel>

<table class="mt-4 table table-hover table-bordered table-sm">
    
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.thumbnail</td>
                <td>@item.seasons</td>
                <td>@item.address.addressLines</td>
                <td>@item.faxNumber</td> 
                <td class="align-middle">
                     <a class="btn btn-outline-primary" asp-action="HotelList"  onclick="@("window.location.href='" + @Url.Action("HotelList", "HotelController") + "'");" ><i class="bi bi-pencil-square"></i>Listele </a>
                </td>
            </tr>
        }
       
    </tbody>
</table>